<%- include('dashboard.ejs')%>
<%- include('../partials/flash.ejs')%>
   <div class="row">
       <div class="col-md-8 m-auto">
            <h3 class="text-center">Blood Stocks</h3>
            <table class="table table-striped">
                <thead class="thead thead-dark">
                    <tr>
                        <th>Blood Groups</th>
                        <th>Blood Units(in ml)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bloods.forEach((blood) => { %>
                        <tr>
                            <td><%= blood.name %></td>
                            <td><%= blood.units %></td>
                            <td class="btn-group">
                                <a href="/blood/eidt/<%= blood._id %>" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                <form action="/blood/<%= blood._id%>?_method=DELETE" method="post">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
       </div>
   </div>
   <div class="row mt-4">
       <div class="col-md-2">
            <div class="card">
                <div class="card-head">
                    <p class="text-center">Total Donars List:</p>
                </div>
                <div class="card-body lead">
                    <i class="fas fa-users"></i>
                    <%= total_donar %>
                </div>
            </div>
       </div>
        <div class="col-md-2">
            <div class="card">
                <div class="card-head">
                    <p class="text-center">Total Donations:</p>
                </div>
                <div class="card-body lead">
                    <i class="fas fa-box-heart"></i>
                    <%= donation %>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card">
                <div class="card-head">
                    <p class="text-center">Total Requests:</p>
                </div>
                <div class="card-body lead">
                    <i class="fas fa-recycle"></i>
                    <%= request %>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card">
                <div class="card-head">
                    <p class="text-center">Total Blood stock:</p>
                </div>
                <div class="card-body lead">
                    <i class="fas fa-store"></i>
                    <%= total %>
                </div>
            </div>
        </div>
   </div>
<%- include('footer.ejs') %>
