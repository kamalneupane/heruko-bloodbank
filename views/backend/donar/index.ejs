<%- include('dashboard.ejs') %>
<%- include('../partials/flash.ejs')%>
<h3 class="h3 text-center">Search Donar </h3>
<form action="/donar/search" method="get">
    <div class="row mt-3">
        <div class="float-right col-md-10">
            <div class="row">
                <div class="form-group col-md-4" style="margin-left: 150px;">
                    <label for="address">Address:</label>
                    <input type="search" required name="address" id="address" placeholder="Search with Address" class="form-control">
                </div>
                <div class="form-group col-md-4">
                    <label for="blood">Blood Group:</label>
                    <select name="blood" class="form-control form-select">
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                </div>
                <div class="form-group col-md-2" style="margin-top: 24px;">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                </div>
                
            </div>
        </div>
    </div>
</form>

<div class="row mt-5">
    <div class="col-md-8 m-auto mt-5">
         <h3 class="">Available Blood Stocks:</h3>
         <table class="table table-striped">
             <thead class="thead thead-dark">
                <tr>
                <th>Blood Groups</th>
                <th>Blood Units(in ml)</th>
                </tr>
             </thead>
             <tbody>
                 <% bloods.forEach((blood) => { %>
                    <tr>
                    <td><%= blood.name %></td>
                    <td><%= blood.units %></td>
                    </tr>
                 <% }) %>
             </tbody>
         </table>
    </div>
</div>
<%- include('footer.ejs') %>
