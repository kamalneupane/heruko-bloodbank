<%- include('./partials/header')%>
<body>
    <%- include('./partials/navbar')%>
    <div class="container">
        <div class="row mt-2">
            <div class="col-md-6 border m-auto">
                <h2 class="text-center">Enter new password</h2>
                <form action="<%=link%>?_method=PUT" method="post">
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter new password">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">ConfirmPassword:</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Enter confirm password">
                    </div>
                    <button type="submit" class="btn btn-success rounded-pill mt-2 mb-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
<%- include('./partials/footer') %>